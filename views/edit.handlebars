<div class="container">
  <form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
    <div>
      <span style="width: 100px; display: inline-block">餐廳</span>
      <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">餐廳(en)</span>
      <input type="text" placeholder="name" name="name_en" value="{{ restaurant.name_en }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">餐廳類型</span>
      <input type="text" placeholder="name" name="category" value="{{ restaurant.category }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">image</span>
      <input type="text" placeholder="name" name="image" value="{{ restaurant.image }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">地址</span>
      <input type="text" placeholder="name" name="location" value="{{ restaurant.location }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">電話</span>
      <input type="text" placeholder="name" name="phone" value="{{ restaurant.phone }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">google_map</span>
      <input type="text" placeholder="name" name="google_map" value="{{ restaurant.google_map }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">評分</span>
      <input type="text" placeholder="name" name="rating" value="{{ restaurant.rating }}">
    </div>
    <div>
      <span style="width: 100px; display: inline-block">餐廳描述</span>
      <input type="text" placeholder="name" name="description" value="{{ restaurant.description }}">
    </div>
    {{!-- footer --}}
    <div class="mt-3">
      <button type="submit">Save</button>
      <a href="/">back</a>
      <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
    </div>
  </form>
</div>