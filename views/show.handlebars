<!-- ./views/show.handlebars -->
<div class="container py-5">
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>
    <img class="rounded mb-4" src="{{restaurant.image}}" alt="Card image cap"
      style="max-height: 300px;">
  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <p class="text-secondary mb-1">
        <ul>
          <li>類別：{{restaurant.category}}</li>
          <li>評分：{{restaurant.rating}}</li>
          <li>電話：{{restaurant.phone}}</li>
          <li>地址：{{restaurant.location}}</li>         
          <li>描述：{{restaurant.description}}</li>
        </ul>
      </p>
    </div>
  </div>
</div>